---
const projectImages = [
  "/project/project-image01.png",
  "/project/project-image02.png",
  "/project/project-image03.png",
  "/project/project-image04.png",
  "/project/project-image05.png",
];
---

<section class="project py-5" id="project">
  <div class="container">
    <div class="row">
      <div class="col-lg-11 text-center mx-auto col-12">
        <div class="col-lg-8 mx-auto">
          <h2>Project's I've done for the web</h2>
        </div>

        <section class="splide" aria-label="Splide Basic HTML Example">
          <div class="splide__track">
            <ul class="splide__list">
              {
                projectImages.map((url) => (
                  <li class="splide__slide">
                    <img src={url} class="img-fluid" alt="project image" />
                  </li>
                ))
              }
            </ul>
          </div>
        </section>
      </div>
    </div>
  </div>
</section>
<script>
  import Splide from "@splidejs/splide";

  new Splide(".splide", {
    type: "loop",
    autoplay: true,
    pagination: false,
    interval: 3000,
  }).mount();
</script>

<style>
  .splide__progress__bar {
    height: 3px;
    background: #ccc;
  }
</style>
